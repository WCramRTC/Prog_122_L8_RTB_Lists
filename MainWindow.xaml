<Window x:Class="Prog_122_L8_RTB_Lists.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prog_122_L8_RTB_Lists"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Canvas Background="Black">
        <RichTextBox Height="284" Width="263" Canvas.Left="479" Canvas.Top="40" HorizontalAlignment="Center" VerticalAlignment="Top">
            <FlowDocument>
                <Paragraph>
                    <Run x:Name="rtbDisplay" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Button x:Name="btnDisplayText" Content="Display Info" Canvas.Left="532" Canvas.Top="364" HorizontalAlignment="Left" VerticalAlignment="Top" Width="132" Click="btnDisplayText_Click"/>
        <Label Content="Name Of Driver" Canvas.Left="40" Canvas.Top="93" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Label Content="Address" Canvas.Left="40" Canvas.Top="140" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Make" Canvas.Left="40" Canvas.Top="191" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Model" Canvas.Left="40" Canvas.Top="236" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="Year" Canvas.Left="40" Canvas.Top="283" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label Content="What Happened" Canvas.Left="40" Canvas.Top="346" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="txtDriverName" Canvas.Left="149" TextWrapping="Wrap" Canvas.Top="93" Width="302" Height="22" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="txtAddress" Canvas.Left="149" TextWrapping="Wrap" Canvas.Top="142" Width="302" Height="22" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="txtMake" Canvas.Left="149" TextWrapping="Wrap" Canvas.Top="195" Width="302" Height="22" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBox x:Name="txtModel" Canvas.Left="149" TextWrapping="Wrap" Canvas.Top="238" Width="302" Height="22" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <TextBox x:Name="txtYear" Canvas.Left="149" TextWrapping="Wrap" Canvas.Top="285" Width="302" Height="22" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <RichTextBox Height="75" Width="239" Canvas.Left="178" Canvas.Top="333" HorizontalAlignment="Center" VerticalAlignment="Top">
            <FlowDocument>
                <Paragraph>
                    <Run x:Name="rtbAccidentInfo" />
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Canvas>
</Window>
